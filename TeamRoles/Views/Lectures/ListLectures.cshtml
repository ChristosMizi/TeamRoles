@model IEnumerable<TeamRoles.Models.Lecture>

@{
    ViewBag.Title = "ListLectures";
}
@if (Model.Count() != 0)
{
    <h2>ListLectures</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LectureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LectureName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Filename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LectureId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LectureId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LectureId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h2>There are no Lectures</h2>
    @Html.ActionLink("Back", "CourseHome","Course", new { id = Model.FirstOrDefault().Course.CourseId },null)
}

