<div class="container">
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class="card">
                <img alt="Card image cap" class="card-img-top img-fluid" src="@User.Identity.GetUrlPicture()" width="100" height="100" />
                <div class="card-block">
                    <h4 class="card-title"> @User.Identity.GetUserName() </h4>

                    <p class="card-text">
                        @if (User.IsInRole("Teacher"))
                        {
                        <p>Teacher</p>
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <p>Student</p>
                    }
                    else if (User.IsInRole("Parent"))
                    {
                        <p>Parent</p>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <p>Admin</p>
                    }
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-4">
                @using (Html.BeginForm("Create", "Posts", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group purple-border">

                            <textarea class="form-control purple-border" id="PostText" style="min-width: 100%" name="PostText" type="text" placeholder="Write something here..." rows="5"></textarea>
                            <input type="hidden" id="UserID" name="UserID" value='@User.Identity.GetUserId()' />

                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="text-right">
                                    <input type="submit" value="Post" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        @if (Model != null)
        {
            foreach (var post in Model)
            {
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    
                    <div class="col-md-4">
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <td>
                                        @post.UserName
                                    </td>
                                    <td>
                                        @post.PostDate
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                    <td>
                                        @Html.ActionLink("Delete", "Delete","Posts", new { id = post.PostId},null)
                                    </td>
                                    }
                                </tr>
                                <tr>
                                    <td colspan="3">@post.PostText</td>
                                </tr>
                            </tbody>
                        </table>
                        <br />
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
            }
        }

    </div>


