@model List<string>
@{

    ViewBag.Title = "Index";
}
<body>
    <div class="row">
        <div class="col-md-4">


            <h5> Upload Your Project </h5>

            @using (Html.BeginForm("Index", "UploadFiles", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.TextBox("file", "", new { type = "file" })

                @ViewBag.Message

                <input class="btn btn-primary" type="submit" value="Save">
            }

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                List
            </button>



            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Files</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="table">
                                @foreach (var i in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td> @ViewBag.MessageForList</td>
                                            <td> @i.ToString() </td>
                                            <td> @Html.ActionLink("Download", "DownloadFile", new { text = @i.ToString() }) </td>
                                            <td> @Html.ActionLink("Delete", "DeleteFile", new { text = @i.ToString() }) </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
    </div>

</body>



