@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Delete Role";
}

<h3>Delete A Role</h3>
@using (Html.BeginForm("Delete", "Roles"))
{
@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
<p>
    Role Name: @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", new { required = "required" })
</p>
<input type="submit" value="Delete Role" class="btn btn-danger" />
